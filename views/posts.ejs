<body class="all-posts all-posts-index">

  <div class="navbar">
    <div class="logo">B</div>
    <div class="nav-btns">
      <a class="nav-btn-1" href="/add-post">+ Add</a>
      <svg xmlns="http://www.w3.org/2000/svg" width="10" height="30">
        <line x1="5" y1="0" x2="5" y2="30" stroke="white" />
      </svg>
      <a class="nav-btn-2" href="/manage-posts">Manage</a>
    </div>
  </div>

  <h1 class="index-title" style="margin-top: 30px;">ALL POSTS</h1>

  <div class="center-sec posts-index manage-posts-container">
    
    <ul>
      <% posts.forEach((post) => { %>
        <li class="p-test">
          <a href="/post/<%= post.id %>/view" class="post-link"></a>
            <img src="/<%= post.image_path %>" alt="Image for <%= post.title %>">
            <div class="post-preview-text">
              <span><%= post.title %></span>
              <div class="edit-delete">
              </div>
              <p><%= formatDate(post.timestamp) %></p>
          </div> 
        
        </a>
        </li>
      <% }); %>
    </ul>
   
    <div class="pagination">
      <% for (let i = 1; i <= totalPages; i++) { %>
        <a href="/posts/<%= i %>" class="<%= currentPage === i ? 'active' : '' %>"><%= i %></a>
      <% } %>
    </div>
    <p>Total Pages: <%= totalPages %></p>
  </div>

